#main
	width 100%
	padding 0 0 6%
	position relative
	background-color: #BB863D
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
	&:before
		content: ''
		position: absolute
		display block
		width 100%
		height 100%
		top 0
		left 0
		right 0
		bottom 0
		background-color: rgba(#000,.55)
		z-index 0
	.container
		position relative
		z-index: 9
header
	padding: 2% 0
	position relative
	margin-bottom: 5%
#logo
	float: left
	width 164px
	height auto
.contacts
	float: right
	text-align: right
	line-height  15px
.contact
	font-size: 10px
	&:focus
		text-decoration: none
	.fa
		color: #BB5256
		font-size: 14px
		margin: 0 10px 0 22px
		line-height: 14px
	.fa+span
		line-height: 14px
		font-size: 14px;
		font-family: "RobotoLight", serif;
		color: #fff
		text-align: right;
		&:hover
			text-decoration underline
.tel:first-child
	.fa-phone
		margin-left: 0
.pre
	color #fff
	small
		display block
		font-size: 70%
.main-title
	font-size: 47px
	font-family: 'RobotoBlack', sans-serif
	margin 2% 0 4%
	color #8D3E40
	text-transform: uppercase
	display: inline-block
	background-color: #FDFEDE
	padding 2px 5px
	border-radius: 5px
.main-text
	margin-bottom: 2%
	font-size: 20px
	color #fff
	span
		font-size: 22px
		font-family: 'RobotoBold', serif
		display: inline-block
	&:last-child
		margin-bottom: 0
.button-main
	margin: 4% auto 0
	box-shadow: 0 2px 5px rgba(#FDFEDE,.6);