@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.lessons-container
	.get-list
		max-width 1000px
	.price-container
		max-width 650px
	.recs-container
		max-width 860px
@media screen and (max-width 767px)
	#logo
		float: none
		display block
		margin 0 auto 5px
	.contacts
		float: none
		text-align: center
	.contact
		display: inline-block
		margin 0 5px 5px
		.fa
			margin 0 5px 0 7px
	.main-title
		font-size: 40px
	#vk
		margin-bottom: 20px
@media screen and (max-width 485px)
	#logo
		width 140px
	.contact .fa
	.contact .fa  + span
		font-size: 12px
		line-height: 12px
	.main-title
		font-size: 30px
	.plan-text
	.lesson-subtitle
	footer h5
		font-size: 18px
	.general-title
		font-size: 24px
		margin-bottom: 20px
	.lessons-links li
		font-size: 18px
		width 110px
		height 40px
		line-height: 36px
	.lesson-title
		font-size: 22px
	.lesson-list
		padding-left: 5px
	.get-list
		padding 20px
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 30px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
	.recs-links li
		font-size: 18px
		height 40px
		line-height: 36px
	.soc-buttons a
		margin 10px 5px
	footer #conditions, footer p
		font-size: 12px
@media screen and (max-width 385px)
	.main-title
		font-size: 22px
	.main-text
		font-size: 18px
		span
			font-size: 20px
	.lessons-links li
		font-size: 16px
		width: 100px
	.lessons
	.get-list
	.recs
		padding: 15px
	.alert-danger
		font-size: 20px