#records
	padding 6% 0
.recs-container
	width 100%
	max-width 650px
	margin 0 auto
.recs-links
	width 100%
	text-align: center
	li
		height 45px
		line-height: 41px
		padding 0 5px
		border-radius: 5px
		font-size: 20px
		margin 0 5px
		display: inline-block
		cursor pointer
		border: 2px solid #BB863D
		color: #BB863D
		transition: all .4s ease
		&.active2
		&:hover
			background-color: #BB863D
			color: #FDFEDE
			box-shadow: 0 2px 5px rgba(#BB863D,.5)
.recs
	box-shadow: 0 2px 12px 4px rgba(0,0,0,.05)
	background-color #fff
	padding 20px
	border-radius: 5px
	box-shadow: 0 2px 5px rgba(#BB863D,.5)
	margin-top: 10px
	list-style none
.rec-title
	text-align: center
	font-size: 20px
	margin-bottom: 15px
	color: #bb863d
.rec-text
	width 100%
	max-width 650px
	margin 10px auto 0
.general-title-feedback 
	margin-top: 6%
.video-wrapper-rec
#vk
#fb
	box-shadow: 0 2px 8px 4px rgba(#3D3D32, .05)
	overflow hidden
	background-color #fff
	border: 1px solid #BB863D
	border-radius: 5px
.rec-text-sale
	text-align: center
	margin-bottom: 25px