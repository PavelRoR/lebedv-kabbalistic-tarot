#prices
	padding 6% 0
	position relative
	background-color: #2A2430
	background-image url(../img/prices_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	&:before
		content: ''
		position: absolute
		display block
		width 100%
		height 100%
		top 0
		left 0
		right 0
		bottom 0
		background-color: rgba(#000,.55)
		z-index 0
	.container
		position relative
		z-index: 9
.price-container
	padding 4%
	background-color rgba(#FDFEDE,.95)
	box-shadow: 0 0 12px 7px  rgba(0,0,0,.05)
	width 100%
	max-width 560px
	margin 0 auto
	text-align: center
	border-radius: 5px
.price
	font-size: 22px
	margin-bottom: 20px
	span
		display block
		font-family: 'RobotoBlack', sans-serif
		font-size: 28px
