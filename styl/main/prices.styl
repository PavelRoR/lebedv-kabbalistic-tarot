.price-sale
	color red
.price-today
	color green
.alert-danger
	color: #a94442;
	background-color: #f2dede;
	padding: 10px;
	width 100%
	max-width 360px
	margin 20px auto 0
	border: 1px solid #ebccd1;
	border-radius: 4px;
	font-size: 22px;
	text-align: center
.timer-title
	color red
	font-size: 24px
	margin-top: 5%
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 6%
.flip-clock-divider .flip-clock-label
	color #000
.flip-clock-dot
	background-color: #000
.flip-clock-wrapper ul li a div div.inn
	color: #FDFEDE
	background-color: #000
	text-shadow: 2px 2px 2px rgba(#022a37,.6);